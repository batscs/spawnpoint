extends fragments/structure

append style
    link(rel="stylesheet", href="/static/css/admin/pages/project.css")

append content
    form#form(action="/admin/create-project" method="POST")
        h1 Create new Project
        div.flex-row.gap-20px
            div.flex-column.flex-grow
                a name
                input(type="text", minlength=1, name="name")
            div.flex-column
                a start
                input(type="date", name="startDate")
            div.flex-column
                a end
                input(type="date", name="endDate")
        a topics (csv)
        input(type="text", name="topics")

        input#save(type="submit", value="Submit")
    //input#delete(type="button", value="Delete")
